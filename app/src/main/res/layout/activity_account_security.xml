<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:elevation="5dp"
        android:background="@drawable/img_top_background"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/account_security_img_back"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/img_register_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:layout_alignParentBottom="true"
            android:text="账号安全"
            android:textSize="16sp"
            android:textColor="#BCEFFF"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:background="@drawable/img_my_car_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定手机"
                android:textSize="16sp"
                android:textColor="#b5d9e4"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="13dp"/>
            <TextView
                android:id="@+id/account_security_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17373224430"
                android:textSize="12sp"
                android:textColor="#4a5e64"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="13dp"/>

            <TextView
                android:id="@+id/account_security_tx_modify_mobile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去修改"
                android:textSize="12sp"
                android:textColor="#BCEFFF"
                android:layout_marginRight="34dp"
                android:layout_marginTop="42dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/account_security_img"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/img_forward"
                android:layout_marginRight="20dp"
                android:layout_marginTop="45dp"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BCEFFF"
                android:layout_marginTop="89dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录密码"
                android:textSize="16sp"
                android:textColor="#b5d9e4"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码已设置"
                android:textSize="12sp"
                android:textColor="#4a5e64"
                android:layout_marginTop="148dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/account_security_tx_modify_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去修改"
                android:textSize="12sp"
                android:textColor="#BCEFFF"
                android:layout_marginRight="34dp"
                android:layout_marginTop="133dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/account_security_img_modify_password"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/img_forward"
                android:layout_marginRight="20dp"
                android:layout_marginTop="136dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>