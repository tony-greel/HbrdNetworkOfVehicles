<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login_background">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:layout_marginTop="46dp"
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/retrieve_the_password_img_back"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/img_register_back"/>
        <ImageView
            android:id="@+id/retrieve_the_password_img_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight ="true"
            android:background="@drawable/img_login_signout"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="158dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="27sp"
            android:textColor="#BCEFFF" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="259dp"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/retrieve_the_password_et_phone_number"
            android:textSize="14sp"
            android:hint="手机号"
            android:background="@null"
            android:textColorHint="#BCEFFF"
            android:textColor="#BCEFFF"
            android:maxLines="1"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:singleLine="true"
            android:layout_marginTop="40dp"
            android:background="#BCEFFF"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/retrieve_the_password_img_disappear_four"
            android:layout_marginRight="25dp"
            android:src="@drawable/img_login_signout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="11dp"
            android:layout_height="11dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="318dp"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/retrieve_the_password_et_verification"
            android:textSize="14sp"
            android:hint="验证码"
            android:background="@null"
            android:textColorHint="#BCEFFF"
            android:textColor="#BCEFFF"
            android:maxLines="1"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_width="220dp"
            android:layout_height="50dp"/>
        <View
            android:layout_width="210dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:singleLine="true"
            android:layout_marginTop="40dp"
            android:background="#BCEFFF"/>
        <Button
            android:id="@+id/retrieve_the_password_bt_obtain_verification"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight ="true"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:text="获取验证码"
            android:textSize="12dp"
            android:background="@drawable/background_gradual_change" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="410dp">
        <Button
            android:id="@+id/retrieve_the_password_button"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:textColor="#FFFFFF"
            android:text="下一步"
            android:textSize="20sp"
            android:background="@drawable/background_gradual_change"/>
    </RelativeLayout>



</RelativeLayout>