<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:elevation="5dp"
        android:background="@drawable/img_top_background"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/reset_password_img_back"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/img_register_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:layout_alignParentBottom="true"
            android:text="重置密码"
            android:textSize="16sp"
            android:textColor="#BCEFFF"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:background="@drawable/img_my_car_background">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码由8-16位英文/数字或字符组成"
                android:textSize="10sp"
                android:textColor="#BCEFFF"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="92dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/reset_password_et_verification"
                android:textSize="14sp"
                android:hint="请输入8-16位密码"
                android:textColorHint="#BCEFFF"
                android:textColor="#BCEFFF"
                android:maxLines="1"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp">
            <Button
                android:id="@+id/reset_password_vehicle_button"
                android:layout_width="320dp"
                android:layout_height="43dp"
                android:textColor="#BCEFFF"
                android:text="确认"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_gradual_change"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>