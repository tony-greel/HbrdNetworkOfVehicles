<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:elevation="5dp"
        android:background="@drawable/img_top_background"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <ImageView
            android:id="@+id/modify_phone_number_img_back"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/img_register_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="重置密码"
            android:textSize="20dp"
            android:textColor="#BCEFFF"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:background="@drawable/img_my_car_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已绑定手机号"
            android:textColor="#BCEFFF"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/modify_phone_number_tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17373224430"
            android:textSize="20dp"
            android:textColor="#BCEFFF"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机号是您身份的重要凭证，当账号发生异常时,\n将会通过该手机号第一时间通知您，请谨慎操作！"
            android:textColor="#BCEFFF"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="40dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp">
            <Button
                android:id="@+id/modify_phone_number_vehicle_button"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="更换手机号"
                android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_gradual_change"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>