<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login_background">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:layout_marginTop="46dp"
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/register_img_back"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/img_register_back"/>
        <ImageView
            android:id="@+id/register_img_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight ="true"
            android:background="@drawable/img_login_signout"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户注册"
            android:textSize="30dp"
            android:textColor="#BCEFFF"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="55dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/register_et_full_name"
                android:textSize="14sp"
                android:hint="姓名"
                android:textColorHint="#BCEFFF"
                android:textColor="#BCEFFF"
                android:maxLines="1"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_width="337dp"
                android:layout_height="50dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_marginTop="40dp"
                android:background="#BCEFFF"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/register_img_full_name"
                android:layout_marginRight="25dp"
                android:src="@drawable/img_login_signout"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="11dp"
                android:layout_height="11dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="114dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/register_et_id"
                android:textSize="14sp"
                android:hint="身份证"
                android:textColorHint="#BCEFFF"
                android:textColor="#BCEFFF"
                android:maxLines="1"
                android:background="@null"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_width="337dp"
                android:layout_height="50dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_marginTop="40dp"
                android:background="#BCEFFF"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/register_img_id"
                android:layout_marginRight="25dp"
                android:src="@drawable/img_login_signout"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="11dp"
                android:layout_height="11dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="173dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/register_et_account"
                android:textSize="14sp"
                android:hint="用户名"
                android:textColorHint="#BCEFFF"
                android:textColor="#BCEFFF"
                android:maxLines="1"
                android:background="@null"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_width="337dp"
                android:layout_height="50dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_marginTop="40dp"
                android:background="#BCEFFF"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/register_img_disappear"
                android:layout_marginRight="25dp"
                android:src="@drawable/img_login_signout"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="11dp"
                android:layout_height="11dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="232dp">
            <EditText
                android:id="@+id/register_et_password"
                android:textSize="14sp"
                android:hint="密码"
                android:textColorHint="#BCEFFF"
                android:textColor="#BCEFFF"
                android:background="@null"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_width="337dp"
                android:layout_height="50dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_marginTop="40dp"
                android:background="#BCEFFF"/>
            <ImageView
                android:id="@+id/register_password_lnvisible"
                android:layout_marginRight="25dp"
                android:src="@drawable/img_longin_password_lnvisible"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="10dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="291dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/register_et_again_password"
                android:textSize="14sp"
                android:hint="确认密码"
                android:textColorHint="#BCEFFF"
                android:textColor="#BCEFFF"
                android:background="@null"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_width="337dp"
                android:layout_height="50dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_marginTop="40dp"
                android:background="#BCEFFF"/>
            <ImageView
                android:id="@+id/register_password_lnvisible_two"
                android:layout_marginRight="25dp"
                android:src="@drawable/img_longin_password_lnvisible"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="13dp"
                android:layout_height="10dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="350dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/register_et_phone_number"
                android:textSize="14sp"
                android:hint="手机号"
                android:textColorHint="#BCEFFF"
                android:textColor="#BCEFFF"
                android:background="@null"
                android:maxLines="1"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_width="337dp"
                android:layout_height="50dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_marginTop="40dp"
                android:background="#BCEFFF"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/register_img_disappear_four"
                android:layout_marginRight="25dp"
                android:src="@drawable/img_login_signout"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="11dp"
                android:layout_height="11dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="409dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/register_et_verification"
                android:textSize="14sp"
                android:hint="验证码"
                android:textColorHint="#BCEFFF"
                android:textColor="#BCEFFF"
                android:maxLines="1"
                android:background="@null"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_width="220dp"
                android:layout_height="50dp"/>
            <View
                android:layout_width="205dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:layout_marginTop="40dp"
                android:background="#BCEFFF"/>
            <Button
                android:id="@+id/register_bt_obtain_verification"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight ="true"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF"
                android:text="获取验证码"
                android:textSize="10dp"
                android:background="@drawable/background_gradual_change" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp">
            <Button
                android:id="@+id/register_button"
                android:layout_width="320dp"
                android:layout_height="43dp"
                android:textColor="#FFFFFF"
                android:text="注册"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_gradual_change"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>