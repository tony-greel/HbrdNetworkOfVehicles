<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingBottom="5dp"
        android:elevation="5dp"
        android:background="@drawable/img_top_background"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/account_security_img_back"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/img_register_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="账号安全"
            android:textSize="16sp"
            android:textColor="#BCEFFF"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:background="@drawable/img_my_car_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定手机"
                android:textSize="16sp"
                android:textColor="#b5d9e4"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="21dp"/>

            <TextView
                android:id="@+id/account_security_tx_modify_mobile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去修改"
                android:textSize="12dp"
                android:textColor="#BCEFFF"
                android:layout_marginRight="38dp"
                android:layout_marginTop="32dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/account_security_img"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/img_forward"
                android:layout_marginRight="20dp"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BCEFFF"
                android:layout_marginTop="89dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录密码"
                android:textSize="16sp"
                android:textColor="#b5d9e4"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="21dp"/>

            <TextView
                android:id="@+id/account_security_tx_modify_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去修改"
                android:textSize="12sp"
                android:textColor="#BCEFFF"
                android:layout_marginRight="38dp"
                android:layout_marginTop="128dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/account_security_img_modify_password"
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/img_forward"
                android:layout_marginRight="20dp"
                android:layout_marginTop="131dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>